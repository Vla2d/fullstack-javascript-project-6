extends ../layout.pug

block header
  h1(class="mb-3")=t('views.users.new.header')

block content
  div(class="row")
    div(class="col-4")
      form(action=reverse('users') method="post")
        +input('text', 'firstName', t('views.users.new.firstName'), errors, user)
        +input('text', 'lastName', t('views.users.new.lastName'), errors, user)
        +input('email', 'email', t('views.users.new.email'), errors, user)
        +input('password', 'password', t('views.users.new.password'), errors)
        +submitButton(t('views.users.new.submit'))